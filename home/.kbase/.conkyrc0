background yes
update_interval 2

cpu_avg_samples 2
net_avg_samples 2
temperature_unit celsius

double_buffer yes
no_buffers yes
text_buffer_size 2048

#gap_x 935
gap_x 480
gap_y 30



minimum_size 180 320
maximum_width 230
# — WINDOW — #
own_window yes
own_window_type override
own_window_transparent yes
own_window_hints undecorate,sticky,skip_taskbar,skip_pager,below
border_inner_margin 0
border_outer_margin 0
alignment tr

draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
##
override_utf8_locale yes
use_xft yes
xftfont caviar dreams:size=10
xftalpha 0.5
uppercase no

default_color FFFFFF
color1 FDA455
color2 666
color3 666
color4 FFFFF 
color5 0AFF0A

lua_load ~/.kbase/conky_orange.lua 
lua_draw_hook_post main





